#include<stdio.h>
int main()
{
	int t;
	scanf("%d",&t);
	while(t--)
	{
		int n,i;
		int long total=0;
		scanf("%d",&n);
		int long a[100001];
		int long d[100001];
		for(i=0;i<n;i++)
		{
			scanf("%ld",&a[i]);
		}
		for(i=0;i<n;i++)
		{
			d[i]=1;
		}
		for(i=0;i<n-1;i++)
		{
			if(a[i+1]>=a[i])
			d[i+1]=d[i]+1;
		}
		for(i=0;i<n;i++)
		{
			total=total+d[i];
		}
		printf("%ld\n",total);
	}
	
}