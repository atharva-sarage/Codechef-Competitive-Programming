#include<stdio.h>
#include<math.h>

int main()
{
	int t;
	scanf("%d",&t);
	while(t--)
	{
		int n,i;
		int long long s,c3;
		scanf("%d %lld",&n,&s);
		c3=(n*(n+1))/2;
		
		
		if(s==c3)
		{
			printf("0\n");
		}
		else
		{
			s=s-n;

			int long long ans=-1;
			int long long c1=1+4*2*(s);
			int long long c2=pow(c1,0.5);
			ans=ans+c2;
			ans=ans/2;

			printf("%lld\n",n-ans-1);





			}
		}
		
		}
		
		
	